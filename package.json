{
  "name": "the-chatroom",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "next:dev": "next dev",
    "next:build": "next build",
    "dev": "npm run dev --workspaces --if-present",
    "dev:api": "npm run dev -w @chatroom/api",
    "dev:socket": "npm run dev -w @chatroom/socket",
    "dev:web": "npm run dev -w @chatroom/web",
    "dev:admin": "npm run dev -w @chatroom/admin",
    "dev:mobile": "npm run start -w @chatroom/mobile",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build -w @chatroom/web",
    "build:admin": "npm run build -w @chatroom/admin",
    "build:email": "npm run build -w @chatroom/email",
    "build:analytics": "npm run build -w @chatroom/analytics",
    "build:cli": "npm run build -w @chatroom/cli",
    "start": "npm run start --workspaces --if-present",
    "start:api": "npm run start -w @chatroom/api",
    "start:socket": "npm run start -w @chatroom/socket",
    "start:web": "npm run start -w @chatroom/web",
    "start:admin": "npm run start -w @chatroom/admin",
    "prisma:generate": "npm run prisma:generate -w @chatroom/api",
    "prisma:migrate": "npm run prisma:migrate -w @chatroom/api",
    "cli": "npm run cli -w @chatroom/cli --",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf packages/*/node_modules packages/*/.next packages/*/dist node_modules"
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "bcryptjs": "^2.4.3",
    "cookie": "^0.7.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "lucide-react": "^0.264.0",
    "next": "^14.0.0",
    "prisma": "^5.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.2",
    "twilio": "^4.18.0",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/s3-request-presigner": "^3.450.0",
    "@vladmandic/face-api": "^1.7.12",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "sharp": "^0.33.0",
    "tesseract.js": "^5.0.3"
  },
  "devDependencies": {
    "@nx/workspace": "^22.3.3",
    "@types/react": "19.2.7",
    "turbo": "^2.7.2",
    "typescript": "5.9.3"
  }
}
