{
  "name": "the-chatroom",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://telleriacarolina.github.io/the-chatroom",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "comment_1": "=== PRIMARY: Root-level development ===",
    "dev:api": "nodemon api/server.js",
    "dev:socket": "nodemon socket/socket-server.js",
    "dev:web": "cd web && npm run dev",
    "dev": "node scripts/start-all.js --run",
    "comment_2": "=== SECONDARY: Package workspaces (optional) ===",
    "pkgs:dev": "npm run dev --workspaces --if-present",
    "pkgs:build": "npm run build --workspaces --if-present",
    "pkgs:start": "npm run start --workspaces --if-present",
    "comment_3": "=== Database & Prisma ===",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "comment_4": "=== Testing ===",
    "test:startup": "node scripts/test-startup.js",
    "test:startup:bash": "bash scripts/test-startup.sh",
    "comment_5": "=== Utilities ===",
    "clean": "rm -rf node_modules packages/*/node_modules web/.next packages/*/.next packages/*/dist",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "bcryptjs": "^2.4.3",
    "cookie": "^0.7.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "lucide-react": "^0.264.0",
    "next": "^14.0.0",
    "prisma": "^5.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.2",
    "twilio": "^4.18.0",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/s3-request-presigner": "^3.450.0",
    "@vladmandic/face-api": "^1.7.12",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "sharp": "^0.33.0",
    "tesseract.js": "^5.0.3"
  },
  "devDependencies": {
    "@nx/workspace": "^22.3.3",
    "@types/react": "^18.2.0",
    "turbo": "^2.7.2",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18 <22"
  }
}
