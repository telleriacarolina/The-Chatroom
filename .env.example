# === THE CHATROOM - Environment Configuration ===

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/chatroom"

# JWT Secrets (min 32 characters)
ACCESS_TOKEN_SECRET="your-super-secret-access-key-min-32-chars"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-key-min-32-chars"

# Encryption Keys
ENCRYPTION_KEY="your-32-byte-hex-key"
PHONE_ENC_KEY="your-32-byte-hex-key"

# Server Configuration
NODE_ENV="development"
PORT=3001
SOCKET_PORT=3002
FRONTEND_URL="http://localhost:3000"

# Optional: AWS S3 for file uploads
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# S3_BUCKET_NAME=your-verification-bucket

# Optional: Twilio for SMS
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_FROM_NUMBER=+1234567890

# Verification Configuration
VERIFICATION_RETENTION_DAYS=90
MAX_VERIFICATION_ATTEMPTS=3
