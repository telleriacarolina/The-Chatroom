{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Transaction",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "itemId": { "type": "string" },
    "buyerId": { "type": "string" },
    "sellerId": { "type": "string" },
    "amount": { "type": "number" },
    "currency": { "type": "string", "enum": ["USD","EUR","GBP"] },
    "paymentMethod": { "type": "string", "enum": ["STRIPE","PAYPAL","CRYPTO"] },
    "paymentStatus": { "type": "string", "enum": ["PENDING","COMPLETED","FAILED","REFUNDED"] },
    "transactionFee": { "type": ["number","null"] },
    "sellerPayout": { "type": ["number","null"] },
    "paymentIntentId": { "type": ["string","null"] },
    "createdAt": { "type": "string", "format": "date-time" },
    "completedAt": { "type": ["string","null"], "format": "date-time" }
  },
  "required": ["id","itemId","buyerId","sellerId","amount","currency","paymentMethod","paymentStatus","createdAt"]
}
