{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lounge",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "slug": { "type": "string" },
    "description": { "type": "string" },
    "accessLevel": { "type": "string", "enum": ["18+", "18+RED"] },
    "iconColor": { "type": ["string", "null"], "pattern": "^#?([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$" },
    "isActive": { "type": "boolean", "default": true },
    "maxCapacity": { "type": ["integer", "null"], "minimum": 1 },
    "currentUserCount": { "type": "integer", "default": 0 },
    "createdAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "name", "slug", "description", "accessLevel", "createdAt"]
}
